
<form method="post" action='/swimmers/<%=@swimmer.slug%>'>

  <h3>Personal Details</h3>

  <input type="hidden" id="hidden" name="_method" value="patch">
  <label>Name: </label><input type="text" name="name" value="<%=@swimmer.name%>"><br>
  <label>Gender: </label><input list="gender" name="gender" value="<%=@swimmer.gender%>" type="text"><br>
  <datalist id="gender">
    <!-- try making options compulsory -->
    <option value="M">
    <option value="F">
  </datalist>
  <label>Age: </label><input type="integer" name="age" value="<%=@swimmer.age%>"><br>

  <br>

  <h3>Registered Events</h3>

  <ul>
  <%@swimmer.timings.each do |timing|%>
    <li><%=timing.event.name%> Personal Best: <input type="time" name="[<%=timing.event.name%>][timing]" value=<%=timing.time_to_string%>></li>
  <%end%>
  </ul>

  <input type="submit" value="Submit">

</form>
